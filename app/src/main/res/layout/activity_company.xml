<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompanyActivity">
    <Button
        android:id="@+id/web"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cloud Activity"
        android:layout_gravity="right"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Company Data"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_file1"
        android:text="Pick Training csv file"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pick_file1"
        android:text="Tap to pick Training csv file"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_file2"
        android:text="Pick Test csv file"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pick_file2"
        android:text="Tap to pick Test csv file"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/model"
        android:text="Tap to Train Model"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:text="Model Result of Blood Donation Count"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"/>
</LinearLayout>